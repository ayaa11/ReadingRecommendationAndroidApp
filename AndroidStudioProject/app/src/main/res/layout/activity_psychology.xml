<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PsychologyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:alpha="0.2"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:id="@+id/txt"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="Psycology"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="Psycology Articles:"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:onClick="title1"
        android:text="How long does it Actually Take to Form a New Habit? (Backed by Science)"
        android:textColor="@color/colorAccent" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_below="@+id/checkBox1"
        android:layout_centerHorizontal="true"
        android:onClick="title2"
        android:textColor="@color/colorAccent"
        android:text="How to Build New Habits by Taking Advantage of Old Ones" />
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_below="@+id/checkBox2"
        android:layout_centerHorizontal="true"
        android:onClick="title3"
        android:textColor="@color/colorAccent"
        android:text="Focus: The Ultimate Guide on How to Improve Focus and Concentration" />
    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_below="@+id/checkBox3"
        android:layout_centerHorizontal="true"
        android:onClick="title4"
        android:textColor="@color/colorAccent"
        android:text="Creativity: How to Unlock Your Hidden Creative Genius" />
    <CheckBox
        android:id="@+id/checkBox5"
        android:layout_width="344dp"
        android:layout_height="70dp"
        android:layout_below="@+id/checkBox4"
        android:layout_centerHorizontal="true"
        android:onClick="title5"
        android:textColor="@color/colorAccent"
        android:text="The Decision Making Guide: How to Make Smart Decisions and Avoid Bad Ones" />

    <ImageButton
        android:id="@+id/imageBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="25dp"
        app:srcCompat="@drawable/ic_back_black_24dp"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>